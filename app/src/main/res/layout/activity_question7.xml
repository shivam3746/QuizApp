<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg2"
    tools:context="com.example.pavlion.quizapp.Question7">



    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="@string/welcome_message"
        android:layout_marginBottom="@dimen/layout_mbtm"
        android:textSize="@dimen/text2_size" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:layout_marginRight="@dimen/layout_margin_right"
        android:layout_marginTop="@dimen/l_mtp5"
        android:text="@string/quesn_seven"
        android:textSize="@dimen/text_size" />

    <Button
        android:id="@+id/rd25"
        android:layout_width="@dimen/layout_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/l_mtp4"
        android:onClick="onClickrugby"
        android:text="@string/A_7"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_size"
        android:theme="@style/primaryButton" />

    <Button
        android:id="@+id/rd26"
        android:layout_width="@dimen/layout_width"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rd27"
        android:layout_alignStart="@+id/rd27"
        android:layout_below="@+id/rd27"
        android:layout_marginTop="@dimen/l_mtp2"
        android:onClick="onClickfootball"
        android:text="@string/B_7"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_size"
        android:theme="@style/primaryButton" />

    <Button
        android:id="@+id/rd27"
        android:layout_width="@dimen/layout_width"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rd25"
        android:layout_alignStart="@+id/rd25"
        android:layout_below="@+id/rd25"
        android:layout_marginTop="@dimen/l_mtp3"
        android:onClick="onClickicehockey"
        android:text="@string/C_7"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_size"
        android:theme="@style/primaryButton" />

    <Button
        android:id="@+id/rd28"
        android:layout_width="@dimen/layout_width"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rd27"
        android:layout_alignStart="@+id/rd27"
        android:layout_below="@+id/rd26"
        android:layout_marginTop="@dimen/l_mtp2"
        android:onClick="onClickcricket"
        android:text="@string/D_7"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_size"
        android:theme="@style/primaryButton" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rd28"
        android:layout_centerHorizontal="true"
        android:onClick="onClickNext"
        android:text="@string/nxt"
        android:layout_marginTop="@dimen/layout_mtp"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_size"
        android:theme="@style/primaryButton" />

</RelativeLayout>
</ScrollView>