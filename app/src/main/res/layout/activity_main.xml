<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
<RelativeLayout
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg2"
    tools:context="com.example.pavlion.quizapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_message"
        android:layout_marginBottom="@dimen/layout_mbtm"
        android:layout_marginTop="@dimen/layout_mtp2"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/text2_size"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="@dimen/l_mtp5"
        android:text="@string/quesn_one"
        android:layout_marginLeft="@dimen/layout_margin_left"
        android:layout_marginRight="@dimen/layout_margin_right"
        android:textSize="@dimen/text_size"
        android:id="@+id/textView2" />

    <Button
        android:id="@+id/rd1"
        android:layout_width="@dimen/layout_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/l_mtp4"
        android:text="@string/A_1"
        android:onClick="onClickNewDelhi"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_size"
        android:theme="@style/primaryButton" />

    <Button
        android:id="@+id/rd2"
        android:layout_width="@dimen/layout_width"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rd3"
        android:layout_alignStart="@+id/rd3"
        android:layout_below="@+id/rd3"
        android:layout_marginTop="@dimen/l_mtp2"
        android:onClick="onClickKolkata"
        android:text="@string/B_1"
        android:textSize="@dimen/text_size"
        android:theme="@style/primaryButton"
        android:textColor="@color/colorText"/>

    <Button
        android:id="@+id/rd3"
        android:layout_width="@dimen/layout_width"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rd1"
        android:layout_alignStart="@+id/rd1"
        android:layout_below="@+id/rd1"
        android:layout_marginTop="@dimen/l_mtp3"
        android:onClick="onClickMumbai"
        android:text="@string/C_1"
        android:textSize="@dimen/text_size"
        android:theme="@style/primaryButton"
        android:textColor="@color/colorText"/>

    <Button
        android:id="@+id/rd4"
        android:layout_width="@dimen/layout_width"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rd3"
        android:layout_alignStart="@+id/rd3"
        android:layout_below="@+id/rd2"
        android:layout_marginTop="@dimen/l_mtp2"
        android:text="@string/D_1"
        android:onClick="onClickBengaluru"
        android:textSize="@dimen/text_size"
        android:theme="@style/primaryButton"
        android:textColor="@color/colorText"/>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rd4"
        android:layout_centerHorizontal="true"
        android:onClick="onClickNext"
        android:text="@string/nxt"
        android:layout_marginTop="@dimen/layout_mtp"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_size"
        android:theme="@style/primaryButton" />



</RelativeLayout>
</ScrollView>
