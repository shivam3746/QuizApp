<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg2"
    tools:context="com.example.pavlion.quizapp.StartActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/l_mtp6"
        android:text="@string/start"
        android:textSize="@dimen/text4_size"
        android:layout_marginRight="@dimen/l_mtp3"
        android:layout_marginLeft="@dimen/l_mtp3"/>

    <Button
        android:id="@+id/rd17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/l_mtp7"
        android:onClick="onClickYes"
        android:text="@string/play"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_size"
        android:theme="@style/primaryButton" />

    <Button
        android:id="@+id/rd18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rd17"
        android:layout_alignStart="@+id/rd17"
        android:layout_below="@+id/rd17"
        android:layout_marginTop="@dimen/l_mtp8"
        android:onClick="onClickNo"
        android:text="@string/no"
        android:textColor="@color/colorText"
        android:textSize="@dimen/text_size"
        android:theme="@style/primaryButton" />



</RelativeLayout>
</ScrollView>